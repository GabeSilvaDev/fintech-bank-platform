# ═══════════════════════════════════════════════════════════════════════════
# FINTECH BANK PLATFORM - Environment Variables
# ═══════════════════════════════════════════════════════════════════════════

# ═══════════════════════════════════════════════════════════════════════════
# APPLICATION
# ═══════════════════════════════════════════════════════════════════════════
APP_NAME=fintech-bank-platform
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=debug

# ═══════════════════════════════════════════════════════════════════════════
# KAFKA CONFIGURATION (KRaft mode - sem Zookeeper)
# ═══════════════════════════════════════════════════════════════════════════
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=fintech-consumer-group
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_HEARTBEAT_INTERVAL_MS=3000

# Kafka Topics
KAFKA_TOPIC_ACCOUNTS=fintech.accounts.commands
KAFKA_TOPIC_TRANSACTIONS=fintech.transactions.commands
KAFKA_TOPIC_PAYMENTS=fintech.payments.commands
KAFKA_TOPIC_NOTIFICATIONS=fintech.notifications.events
KAFKA_TOPIC_DEAD_LETTER=fintech.deadletter

# ═══════════════════════════════════════════════════════════════════════════
# CASSANDRA CONFIGURATION (Single node - dev)
# ═══════════════════════════════════════════════════════════════════════════
CASSANDRA_HOSTS=localhost:9042
CASSANDRA_KEYSPACE=fintech
CASSANDRA_USERNAME=cassandra
CASSANDRA_PASSWORD=cassandra
CASSANDRA_CONSISTENCY=LOCAL_ONE
CASSANDRA_TIMEOUT=10s
CASSANDRA_CONNECT_TIMEOUT=5s
CASSANDRA_NUM_CONNS=2

# ═══════════════════════════════════════════════════════════════════════════
# REDIS CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# ═══════════════════════════════════════════════════════════════════════════
# API GATEWAY CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8081
API_GATEWAY_READ_TIMEOUT=30s
API_GATEWAY_WRITE_TIMEOUT=30s
API_GATEWAY_IDLE_TIMEOUT=120s
API_GATEWAY_SHUTDOWN_TIMEOUT=10s

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-Request-ID
CORS_MAX_AGE=86400

# ═══════════════════════════════════════════════════════════════════════════
# JWT AUTHENTICATION
# ═══════════════════════════════════════════════════════════════════════════
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h
JWT_ISSUER=fintech-bank-platform

# ═══════════════════════════════════════════════════════════════════════════
# OBSERVABILITY (Opcional - ativar quando necessário)
# ═══════════════════════════════════════════════════════════════════════════
# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9091

JAEGER_ENABLED=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# ═══════════════════════════════════════════════════════════════════════════
# SERVICE PORTS (for microservices)
# ═══════════════════════════════════════════════════════════════════════════
ACCOUNT_SERVICE_PORT=8082
TRANSACTION_SERVICE_PORT=8083
PAYMENT_SERVICE_PORT=8084
NOTIFICATION_SERVICE_PORT=8085

# ═══════════════════════════════════════════════════════════════════════════
# DEBUG TOOLS (Opcional)
# ═══════════════════════════════════════════════════════════════════════════
KAFKA_UI_PORT=8080
